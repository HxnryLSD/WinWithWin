<Window x:Class="WinWithWin.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinWithWin.GUI"
        xmlns:helpers="clr-namespace:WinWithWin.GUI.Helpers"
        mc:Ignorable="d"
        Title="WinWithWin - Windows Tweaker" 
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Border x:Name="MainBorder" Background="{DynamicResource BackgroundBrush}" 
            CornerRadius="10" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="{DynamicResource SidebarBrush}" CornerRadius="10,10,0,0">
                <Grid Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                
                    <!-- App Icon and Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="W" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="WinWithWin" FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource WindowControlButtonStyle}" 
                                Click="MinimizeButton_Click" ToolTip="Minimize">
                            <Path Data="M0,5 H10" Stroke="{DynamicResource PrimaryTextBrush}" StrokeThickness="1" 
                                  Width="10" Height="10" Stretch="None"/>
                        </Button>
                        <Button x:Name="MaximizeButton" Style="{StaticResource WindowControlButtonStyle}" 
                                Click="MaximizeButton_Click" ToolTip="Maximize">
                            <Path x:Name="MaximizeIcon" Data="M0,0 H10 V10 H0 Z" Stroke="{DynamicResource PrimaryTextBrush}" StrokeThickness="1" 
                                  Width="10" Height="10" Stretch="None" Fill="Transparent"/>
                        </Button>
                        <Button Style="{StaticResource WindowControlCloseButtonStyle}" 
                                Click="CloseButton_Click" ToolTip="Close">
                            <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="{DynamicResource PrimaryTextBrush}" StrokeThickness="1" 
                                  Width="10" Height="10" Stretch="None"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        
            <!-- Header -->
            <Border Grid.Row="1" Background="{DynamicResource PrimaryBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="WinWithWin" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="WindowsVersionText" Text="Windows 11 - Build 22621" 
                               FontSize="12" Foreground="#CCFFFFFF" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Minimize to Tray" 
                              Style="{StaticResource ModernCheckBoxStyle}"
                              Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"
                              Checked="MinimizeToTrayCheckBox_Changed" Unchecked="MinimizeToTrayCheckBox_Changed"/>
                    <ComboBox x:Name="LanguageComboBox" Width="90" Margin="0,0,10,0"
                              Style="{StaticResource CompactComboBoxStyle}"
                              SelectionChanged="LanguageComboBox_SelectionChanged">
                        <ComboBoxItem Content="EN" Tag="en" IsSelected="True" ToolTip="English"/>
                        <ComboBoxItem Content="DE" Tag="de" ToolTip="Deutsch"/>
                    </ComboBox>
                    <Button x:Name="ThemeToggleButton" Content="ðŸŒ™" Width="40" Height="40"
                            Style="{StaticResource IconButtonStyle}"
                            Click="ThemeToggleButton_Click"
                            ToolTip="Toggle Dark/Light Theme"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource SidebarBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                              helpers:SmoothScrollBehavior.IsEnabled="True">
                <StackPanel Margin="10">
                    <!-- Search Box -->
                    <TextBox x:Name="SearchBox" 
                             Style="{StaticResource SearchBoxStyle}"
                             TextChanged="SearchBox_TextChanged"
                             Tag="Search tweaks..."/>
                    
                    <!-- Category Navigation -->
                    <TextBlock Text="CATEGORIES" FontWeight="SemiBold" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="5,20,0,10" FontSize="11"/>
                    
                    <ListBox x:Name="CategoryListBox" 
                             Style="{StaticResource CategoryListBoxStyle}"
                             SelectionChanged="CategoryListBox_SelectionChanged">
                        <ListBoxItem Content="ðŸ   All Tweaks" Tag="All" IsSelected="True"/>
                        <ListBoxItem Content="â­  Favorites" Tag="Favorites"/>
                        <ListBoxItem Content="ðŸ”’  Privacy" Tag="Privacy"/>
                        <ListBoxItem Content="âš¡  Performance" Tag="Performance"/>
                        <ListBoxItem Content="ðŸ›¡ï¸  Security" Tag="Security"/>
                        <ListBoxItem Content="ðŸ“¦  Debloat" Tag="Debloat"/>
                        <ListBoxItem Content="ðŸŒ  Network" Tag="Network"/>
                        <ListBoxItem Content="ðŸ”‹  Power" Tag="Power"/>
                        <ListBoxItem Content="ðŸ’¾  Storage" Tag="Storage"/>
                    </ListBox>
                    
                    <Separator Margin="5,20"/>
                    
                    <!-- Presets -->
                    <TextBlock Text="PRESETS" FontWeight="SemiBold" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="5,10,0,10" FontSize="11"/>
                    
                    <Button Content="âš–ï¸  Balanced" Style="{StaticResource PresetButtonStyle}"
                            Tag="Balanced" Click="PresetButton_Click"/>
                    <Button Content="ðŸŽ®  Gaming" Style="{StaticResource PresetButtonStyle}"
                            Tag="Gaming" Click="PresetButton_Click"/>
                    <Button Content="ðŸ”  Privacy" Style="{StaticResource PresetButtonStyle}"
                            Tag="Privacy" Click="PresetButton_Click"/>
                    <Button Content="ðŸ“‰  Minimal" Style="{StaticResource PresetButtonStyle}"
                            Tag="Minimal" Click="PresetButton_Click"/>
                    
                    <Separator Margin="5,20"/>
                    
                    <!-- Profiles -->
                    <TextBlock Text="PROFILES" FontWeight="SemiBold" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="5,10,0,10" FontSize="11"/>
                    
                    <Button Content="ðŸ“¤  Export Profile" Style="{StaticResource PresetButtonStyle}"
                            Click="ExportProfileButton_Click"/>
                    <Button Content="ðŸ“¥  Import Profile" Style="{StaticResource PresetButtonStyle}"
                            Click="ImportProfileButton_Click"/>
                    
                    <Separator Margin="5,20"/>
                    
                    <!-- Tools -->
                    <TextBlock Text="TOOLS" FontWeight="SemiBold" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="5,10,0,10" FontSize="11"/>
                    
                    <Button Content="ðŸ“œ  View History" Style="{StaticResource PresetButtonStyle}"
                            Click="ViewHistoryButton_Click"/>
                    <Button Content="â°  Scheduled Tweaks" Style="{StaticResource PresetButtonStyle}"
                            Click="ScheduledTweaksButton_Click"/>
                    
                    <Separator Margin="5,20"/>
                    
                    <!-- Safety -->
                    <Button Content="ðŸ’¾  Create Restore Point" 
                            Style="{StaticResource SafetyButtonStyle}"
                            Click="CreateRestorePointButton_Click"/>
                </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Tweak List -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Category Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="CategoryTitle" Text="All Tweaks" 
                                       FontSize="20" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock x:Name="CategoryDescription" 
                                       Text="Browse and apply all available tweaks"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="Select All" Style="{StaticResource SecondaryButtonStyle}"
                                    Click="SelectAllButton_Click" Margin="0,0,5,0" Padding="10,5"
                                    Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <Button Content="Batch Undo" Style="{StaticResource SecondaryButtonStyle}"
                                    Click="BatchUndoButton_Click" Padding="10,5"
                                    Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                <!-- Tweaks ScrollViewer with Animation -->
                <Border x:Name="TweaksContainer" Grid.Row="1">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="TweaksTranslate" X="0" Y="0"/>
                    </Border.RenderTransform>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  helpers:SmoothScrollBehavior.IsEnabled="True">
                        <ItemsControl x:Name="TweaksItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TweakCardStyle}"
                                            Margin="0,0,0,10">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                                         From="0" To="1" Duration="0:0:0.3"/>
                                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                            From="20,0,0,10" To="0,0,0,10" 
                                                                            Duration="0:0:0.3">
                                                            <ThicknessAnimation.EasingFunction>
                                                                <QuadraticEase EasingMode="EaseOut"/>
                                                            </ThicknessAnimation.EasingFunction>
                                                        </ThicknessAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <StackPanel>
                                            <!-- Main Tweak Row -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                        
                                                <!-- Selection Checkbox -->
                                                <CheckBox Grid.Column="0" 
                                                          Style="{StaticResource ModernCheckBoxStyle}"
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontSize="14" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                        <Border Background="{Binding RiskColor}" 
                                                                CornerRadius="3" Padding="6,2" Margin="10,0,0,0">
                                                            <TextBlock Text="{Binding Risk}" FontSize="10" 
                                                                       Foreground="White" FontWeight="SemiBold"/>
                                                        </Border>
                                                        <!-- Info Button -->
                                                        <Button Content="{Binding ExpandIcon}" 
                                                                Style="{StaticResource IconButtonStyle}"
                                                                Click="ExpandTweakInfo_Click"
                                                                Tag="{Binding}"
                                                                ToolTip="Show details"
                                                                FontSize="10" 
                                                                Foreground="{DynamicResource SecondaryTextBrush}"
                                                                Width="24" Height="24" Margin="8,0,0,0"
                                                                VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Description}" 
                                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                                               Margin="0,5,0,0" TextWrapping="Wrap"/>
                                                </StackPanel>
                                        
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                                                            VerticalAlignment="Center" Margin="15,0,0,0">
                                                    <Button Content="{Binding FavoriteIcon}" 
                                                            Style="{StaticResource IconButtonStyle}"
                                                            Tag="{Binding Id}"
                                                            Click="FavoriteButton_Click"
                                                            ToolTip="Toggle Favorite"
                                                            FontSize="16" Foreground="{DynamicResource AccentBrush}"
                                                            Width="35" Height="35" Margin="0,0,10,0"/>
                                                    <ToggleButton x:Name="TweakToggle"
                                                                  IsChecked="{Binding IsApplied, Mode=TwoWay}"
                                                                  Style="{StaticResource ToggleSwitchStyle}"
                                                                  Tag="{Binding Id}"
                                                                  Click="TweakToggle_Click"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Expandable Details Panel -->
                                            <Border x:Name="DetailsPanel"
                                                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibility}}"
                                                    Background="{DynamicResource BackgroundBrush}"
                                                    CornerRadius="8" Margin="0,12,0,0" Padding="15">
                                                <StackPanel>
                                                    <!-- Detailed Description -->
                                                    <TextBlock Text="ðŸ“‹ What does this do?" 
                                                               FontWeight="SemiBold" FontSize="12"
                                                               Foreground="{DynamicResource PrimaryBrush}"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding DetailedDescription}" 
                                                               TextWrapping="Wrap" 
                                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                                               Margin="0,0,0,12"/>
                                                    
                                                    <!-- Impact -->
                                                    <TextBlock Text="âš¡ Impact" 
                                                               FontWeight="SemiBold" FontSize="12"
                                                               Foreground="{DynamicResource PrimaryBrush}"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Impact}" 
                                                               TextWrapping="Wrap" 
                                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                                               Margin="0,0,0,12"/>
                                                    
                                                    <!-- Affected Components -->
                                                    <TextBlock Text="ðŸ”§ Affected Components" 
                                                               FontWeight="SemiBold" FontSize="12"
                                                               Foreground="{DynamicResource PrimaryBrush}"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding AffectedComponentsText}" 
                                                               TextWrapping="Wrap" 
                                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                                               Margin="0,0,0,12"/>
                                                    
                                                    <!-- Recommendation -->
                                                    <TextBlock Text="ðŸ’¡ Recommendation" 
                                                               FontWeight="SemiBold" FontSize="12"
                                                               Foreground="{DynamicResource PrimaryBrush}"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Recommendation}" 
                                                               TextWrapping="Wrap" 
                                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                                               Margin="0,0,0,12"/>
                                                    
                                                    <!-- Reversibility Info -->
                                                    <Border Background="{DynamicResource SidebarBrush}" 
                                                            CornerRadius="5" Padding="10,8">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding ReversibleText}" 
                                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource StatusBarBrush}" Padding="15,10"
                CornerRadius="0,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Text="Ready" 
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Apply Selected" Style="{StaticResource PrimaryButtonStyle}"
                            Click="ApplySelectedButton_Click" Margin="0,0,10,0"/>
                    <Button Content="Undo All" Style="{StaticResource SecondaryButtonStyle}"
                            Click="UndoAllButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Window>
